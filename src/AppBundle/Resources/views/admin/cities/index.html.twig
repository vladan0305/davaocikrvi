{% extends '@App/admin/master/layout.html.twig' %}
{% set page_title = 'Gradovi' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">
            Modul Grada

            <a href="{{ path('admin_cities_create') }}" class="btn btn-success" style="float: right;">
                Dodaj Novi
            </a>
        </h1>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                Naziv Tabele
            </div>

            <div class="panel-body">
                <div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 4%">#</th>
                                <th class="text-center">Ime Dr≈æave</th>
                                <th class="text-center">Ime Grada</th>
                                <th class="text-center">Postanski Kod</th>
                                <th class="text-center" style="width: 20%">Akcije</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% if cities is not empty %}

                            {% for citi in cities %}
                            <tr>

                                <td class="text-center">{{ loop.index }}</td>
                                <td class="text-center">{{ citi.country.name }}</td>
                                <td class="text-center">{{ citi.name }}</td>
                                <td class="text-center">{{ citi.postCode }}</td>

                                <td class="text-center">
                                    <a href="{{ path('admin_cities_edit', {'id': citi.getId()}) }}"
                                       class="btn btn-primary">
                                       <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('admin_cities_delete', {'id': citi.getId()}) }}" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>

                            </tr>
                            {% endfor %}
                        {% endif %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}