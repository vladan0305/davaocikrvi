{% extends '@App/admin/master/layout.html.twig' %}
{% set page_title = 'Zahtevi' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">
            Modul Zahteva

            <a href="{{ path('admin_requests_create') }}" class="btn btn-success" style="float: right;">
                Dodaj Novi Zahtev
            </a>
        </h1>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                Naziv Tabele
            </div>

            <div class="panel-body">
                <div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 4%">#</th>
                                <th class="text-center">Korisnik</th>
                                <th class="text-center">Administrator</th>
                                <th class="text-center">Datum</th>
                                <th class="text-center">Krvna Grupa</th>
                                <th class="text-center">Opis</th>
                                <th class="text-center">Za koga</th>
                                <th class="text-center">Do kada</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Promena statusa</th>
                                <th class="text-center" style="width: 20%">Akcije</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% if requests is not empty %}

                            {% for request in requests %}
                            <tr>

                                <td class="text-center">{{ loop.index }}</td>
                                <td class="text-center">{{ request.idUser.email }}</td>
                                <td class="text-center">{{ request.changedBy.email }}</td>
                                <td class="text-center">{{ request.dateTime |date('Y-m-d')}}</td>
                                <td class="text-center">{{ request.bloodType }}</td>
                                <td class="text-center">{{ request.description }}</td>
                                <td class="text-center">{{ request.targetName }}</td>
                                <td class="text-center">{{ request.timeActive|date('Y-m-d') }}</td>
                                <td class="text-center">{{ request.status }}</td>
                                <td class="text-center">{{ request.changedStatusTime|date('Y-m-d') }}</td>

                                <td class="text-center">
                                    <a href="{{ path('admin_requests_edit', {'id': request.getId()}) }}"
                                       class="btn btn-primary">
                                       <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('admin_requests_delete', {'id': request.getId()}) }}" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>

                            </tr>
                            {% endfor %}
                        {% endif %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}